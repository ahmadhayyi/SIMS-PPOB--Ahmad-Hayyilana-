<% if (typeof response !== 'undefined') { %>
    <div class="text-center position-absolute">
        <div class="alert mt-5 alert-<%= response.status === 0 ? 'success' : 'danger' %> alert-sm alert-dismissible fade show position-fixed top-60 start-50 translate-middle w-25 text-center z-3">
            <% response.status === 0 ? `<i class="bi bi-check-circle-fill me-2"></i>` : `<i class="bi bi-x-circle-fill me-2"></i>`%>
            <%= response.message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<% } %>
