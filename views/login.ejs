<div class="container">
    <div class="row">
        <%- include('components/alert') %>
        <div class="col-md-1"></div>
        <div class="col-md-4 d-flex justify-content-center align-items-center">
            <form action="/login" method="POST" class="row g-1">
                <div class="mb-4 d-flex align-items-center justify-content-center">
                    <img class="me-2" src="/public/image/assets/Logo.png" alt="Bootstrap" width="30" height="30">
                    <p class="h4 d-inline mt-1">SIMS PPOB</p>
                </div>
                
                <div class="text-center mb-4">
                    <p class="h3">Masuk atau buat<br>akun untuk memulai</p>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" name="email" placeholder="" value="<%= typeof old !== 'undefined' ? old.email : '' %>" required>
                    <label for="email">Email</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" id="password" name="password" placeholder="" required>
                    <label for="password">Password</label>
                </div>
                <div class="d-grid gap-2 mt-4">
                    <button class="btn btn-danger btn-lg" type="submit">Masuk</button>
                </div>
                <div class="text-center mt-4">
                    <p>Belum punya akun? registrasi <a href="/signup" class="text-danger text-decoration-none fw-semibold">disini</a></p>
                </div>
            </form>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-6 text-center">
            <img src="/public/image/assets/Illustrasi Login.png" class="img-fluid vh-100">
        </div>
    </div>
</div>