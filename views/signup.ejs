<div class="container">
    <div class="row">
        <%- include('components/alert') %>
        <div class="col-md-1"></div>
        <div class="col-md-4 d-flex justify-content-center align-items-center">
            <form action="/signup" method="POST" class="row g-1">
                <div class="mb-4 d-flex align-items-center justify-content-center">
                    <img class="me-3" src="/public/image/assets/Logo.png" alt="Bootstrap" width="30" height="30">
                    <p class="h4 d-inline mt-1">SIMS PPOB</p>
                </div>
                <div class="text-center mb-3">
                    <p class="h3">Lengkapi data untuk<br>membuat akun</p>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" name="email" placeholder="" value="<%= typeof old !== 'undefined' ? old.email : '' %>" aria-describedby="emailfeedback" required>
                    <label for="email">Email</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="first_name" name="first_name" placeholder="" value="<%= typeof old !== 'undefined' ? old.first_name : '' %>" required>
                    <label for="first_name">Nama Depan</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="last_name" name="last_name" placeholder="" value="<%= typeof old !== 'undefined' ? old.last_name : '' %>" required>
                    <label for="last_name">Nama Belakang</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="password" name="password" oninput="validatePassword()" aria-describedby="passwordfeedback" placeholder="" required>
                    <label for="password">Password</label>
                    <div id="passwordfeedback" class="invalid-feedback"></div>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="passwordconfirm" name="passwordconfirm" oninput="validatePasswordConfirm()" aria-describedby="passwordconfirmfeedback" placeholder="" required>
                    <label for="passwordconfirm">Konfirmasi Password</label>
                    <div id="passwordconfirmfeedback" class="invalid-feedback"></div>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-danger btn-lg" type="submit">Registrasi</button>
                </div>
                <div class="text-center">
                    <p>Sudah punya akun? login <a href="/login" class="text-danger text-decoration-none fw-semibold">disini</a></p>
                </div>
            </form>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-6 text-center">
            <img src="/public/image/assets/Illustrasi Login.png" class="img-fluid vh-100">
        </div>
    </div>
</div>

<!-- Javascript -->
<script src="/public/js/signup.js"></script>